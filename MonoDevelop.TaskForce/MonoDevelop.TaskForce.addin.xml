<Addin id          = "TaskForce"
       namespace   = "MonoDevelop"
       name        = "TaskForce for MonoDevelop"
       author      = "Anirudh Sanjeev"
       copyright   = "MIT X11"
       url         = "http://monodevelop.com/"
       description = "Task oriented development"
       category    = "IDE Extensions"
       version     = "2.1.0">
    <Dependencies>
	    <Addin id="Core" version="2.1.0"/>
	    <Addin id="Core.Gui" version="2.1.0"/>
		<Addin id="Ide" version="2.1.0"/>
		<Addin id="Components" version="2.1.0"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Ide/Pads">
<SolutionPad id="MonoDevelop.TaskForce.TasksPad" _label="TaskForce Exp" class="MonoDevelop.TaskForce.TasksPad" defaultPlacement = "Left">
<NodeBuilder id = "MonoDevelop.TaskForce.TasksPad.Temp" class="MonoDevelop.TaskForce.TaskPad.IntegerNodeBuilder"></NodeBuilder>
</SolutionPad>
	</Extension>

	<Extension path="/MonoDevelop/Ide/Commands">
	  <Command id="MonoDevelop.TaskForce.TaskPad.ContextCommands.Temp1" _label="temp1"></Command>
	</Extension>
			
<Extension path="/MonoDevelop/TaskForce/Pads/AddinsPad/IntegerNode">
<CommandItem id = "MonoDevelop.TaskForce.TaskPad.ContextCommands.Temp1"></CommandItem>
</Extension>
<Extension path = "/MonoDevelop/Ide/WorkbenchContexts/Edit">
		<ContextPad id = "MonoDevelop.TaskForce.TasksPad" />		
	</Extension>       
</Addin>