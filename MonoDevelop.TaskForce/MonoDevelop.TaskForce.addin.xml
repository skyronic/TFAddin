<Addin id="TaskForce" namespace="MonoDevelop" name="TaskForce for MonoDevelop" author="Anirudh Sanjeev" copyright="MIT X11" url="http://monodevelop.com/" description="Task oriented Development" category="IDE Extension" version="2.1.0">
	<Dependencies>
		<Addin id="Core" version="2.1.0">
		</Addin>
		<Addin id="Core.Gui" version="2.1.0">
		</Addin>
		<Addin id="Ide" version="2.1.0">
		</Addin>
		<Addin id="Components" version="2.1.0">
		</Addin>
	</Dependencies>
	<Extension path="/MonoDevelop/Ide/Pads">
		<SolutionPad id="MonoDevelop.TaskForce.Gui.TaskPad" _label="TaskForce" class="MonoDevelop.TaskForce.Gui.TaskPad.TaskSolutionPad" defaultPlacement="Left">
		<ContextMenu path="/MonoDevelop/TaskForce/TaskPad/ContextMenu"></ContextMenu>
			<NodeBuilder id="MonoDevelop.TaskForce.Gui.TaskPad.TaskNodeBuilder" class="MonoDevelop.TaskForce.Gui.TaskPad.TaskNodeBuilder">
			</NodeBuilder>
			<NodeBuilder id="MonoDevelop.TaskForce.Gui.TaskPad.ProviderNodeBuilder" class="MonoDevelop.TaskForce.Gui.TaskPad.ProviderNodeBuilder"></NodeBuilder>
			<NodeBuilder id="MonoDevelop.TaskForce.Gui.TaskPad.CategoryNodeBuilder" class="MonoDevelop.TaskForce.Gui.TaskPad.CategoryNodeBuilder"></NodeBuilder>
		</SolutionPad>
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/WorkbenchContexts/Edit">
	<ContextPad id="MonoDevelop.TaskForce.Gui.TaskPad"></ContextPad>
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/Commands">	
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.AddTask" _label="Add Task"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.ViewTask" _label="View Task"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.EditTask" _label="Edit Task"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.NewCategory" _label="New Category"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.ActivateTask" _label="Activate Task"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.DeactivateTask" _label="Deactivate Task"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.Trigger1" _label="Trigger Action 1"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.Trigger2" _label="Trigger Action 2"></Command>
	<Command id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.DeleteTask" _label="Delete Task"></Command>
	
	</Extension>
	
	<ExtensionPoint path = "/MonoDevelop/TaskForce/TaskPad/ContextMenu" name = "Task pad context menu">
		<Description>Context menu for nodes in TaskForce pad.</Description>
		<ExtensionNodeSet id="MonoDevelop.Components.Commands.ItemSet"/>
		<ConditionType id="ItemType" type="MonoDevelop.Projects.Extensions.ItemTypeCondition">
			<Description>Type of the item. If no namespace is provided, MonoDevelop.Projects is assumed.</Description>
		</ConditionType>
	</ExtensionPoint>
	
	<Extension path="/MonoDevelop/TaskForce/TaskPad/ContextMenu">
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.AddTask"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.ViewTask"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.EditTask"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.NewCategory"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.ActivateTask"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.DeactivateTask"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.Trigger1"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.Trigger2"></CommandItem>
	<CommandItem id="MonoDevelop.TaskForce.Gui.TaskPad.ContextMenuCommands.DeleteTask"></CommandItem>
	
	</Extension>
	
	<ExtensionPoint path="/MonoDevelop/TaskForce/Providers" name="Task providers">
	<Description>Must implement iprovider and be a static</Description>
	<ExtensionNode name="Provider" type="MonoDevelop.TaskForce.Providers.ProviderExtensionNode"></ExtensionNode>
	</ExtensionPoint>
	
	
	<Extension path="/MonoDevelop/Ide/StartupHandlers">
		<!--<CommandItem id="MonoDevelop.TaskForce.Commands.CommandList.TaskForceStartupHandler"></CommandItem>-->
		<Class class="MonoDevelop.TaskForce.Commands.TaskForceStartupHandler"></Class>
	</Extension>
</Addin>