<Addin id          = "TaskForce"
       namespace   = "MonoDevelop"
       name        = "TaskForce for MonoDevelop"
       author      = "Anirudh Sanjeev"
       copyright   = "MIT X11"
       url         = "http://monodevelop.com/"
       description = "Task oriented development"
       category    = "IDE Extensions"
       version     = "2.1.0">
    <Dependencies>
	    <Addin id="Core" version="2.1.0"/>
	    <Addin id="Core.Gui" version="2.1.0"/>
		<Addin id="Ide" version="2.1.0"/>
		<Addin id="Components" version="2.1.0"/>
	</Dependencies>
	<Runtime>
	<Import assembly = "MonoDevelop.TaskForce.dll"></Import>
	</Runtime>
	
	
	<Extension path = "/MonoDevelop/Ide/Pads">
	    <Pad id = "MonoDevelop.TaskForce.TasksPad"
	         class = "MonoDevelop.TaskForce.TasksPad"
	         _label = "TaskForce"
	         defaultPlacement = "right"></Pad>
	</Extension>
	
	
<Extension path = "/MonoDevelop/Ide/WorkbenchContexts/Edit">
		<ContextPad id = "MonoDevelop.TaskForce.TasksPad" />		
	</Extension>       
</Addin>